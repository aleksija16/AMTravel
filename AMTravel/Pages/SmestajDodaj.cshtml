@page
@model AMTravel.Pages.SmestajDodajModel
@{
ViewData["Title"]="Novi smestaj";
}


@if(SessionClass.TipKorisnika=="A"){
<form method="post">
  <input type="hidden" asp-for="@Model.PostojiVec" />

      @if (Model.PostojiVec != null && Model.PostojiVec != 0)
      {
        <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Već postoji smeštaj sa tim imenom. <i class="fas fa-exclamation-triangle"></i></div>
      }

    <div class="login-container">
      <div class="login-form">
        <input type="text" class="login-input" asp-for="NoviSmestaj.Naziv" placeholder="Naziv" required />
        <input type="text" class="login-input" asp-for="NoviSmestaj.Adresa"  placeholder="Adresa" required />
        <input type="text" class="login-input" asp-for="NoviSmestaj.Opis"  placeholder="Opis" />
        <input type="text" class="login-input" asp-for="NoviSmestaj.Tip" placeholder="Tip" />
        <input type="file" asp-for="NoviSmestaj.Slika"  placeholder="Slika" required />
        <div class="submit-container">
           <input type="submit" value="Dodaj novi smeštaj" class="login-button"/>
        </div>
    </div>
    </div>
</form>
}
 else
 {
  <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo admin može da dodaje znamenitosti. <i class="fas fa-exclamation-triangle"></i></div> 
  }