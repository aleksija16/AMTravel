@page
@model AMTravel.Pages.SobaDodajModel
@{
ViewData["Title"]="Nova soba";
}


@if(SessionClass.TipKorisnika=="A"){
<form method="post">
  <input type="hidden" asp-for="@Model.PostojiVec" />

      @if (Model.PostojiVec != null && Model.PostojiVec != 0)
      {
        <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Već postoji soba sa tim brojem. <i class="fas fa-exclamation-triangle"></i></div>
      }

    <div class="login-container">
      <div class="login-form">
        <input type="text" class="login-input" asp-for="NovaSoba.BrojSobe" placeholder="Broj sobe" required />
        <input type="text" class="login-input" asp-for="NovaSoba.Cena" placeholder="Cena" required />
        <input type="text" class="login-input" asp-for="NovaSoba.BrojOsoba" placeholder="Broj osoba" />
        <input type="text" class="login-input" asp-for="NovaSoba.Opis" placeholder="Opis" />
        <input type="text" class="login-input" type="file" asp-for="NovaSoba.Slika" placeholder="Slika" required />
        <div class="submit-container">
          <input type="submit" value="Dodaj novu sobu" class="login-button"/>
        </div>
      </div>
    </div>
</form>
}
 else{
    <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo admin može da dodaje znamenitosti. <i class="fas fa-exclamation-triangle"></i></div> 
    }